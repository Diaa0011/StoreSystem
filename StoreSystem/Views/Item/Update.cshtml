<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="row mb-3">
        <label for="Name" class="col-sm-2 col-form-label">Item Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>
    </div>

    <div class="row mb-3">
        <label for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="Description" name="Description" rows="4">@Model.Description</textarea>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" step="0.01" required />
        </div>
    </div>

    <div class="row mb-3">
        <label for="Image" class="col-sm-2 col-form-label">Item Image</label>
        <div class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content($"~/{Model.ImagePath.Replace("\\", "/")}")" alt="Current Image" class="img-fluid mb-3" style="max-height: 150px; object-fit: cover;" />
            }
            <input type="file" class="form-control" id="Image" name="imageFile" />
            <small class="form-text text-muted">Leave blank if you don't want to change the image.</small>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>
