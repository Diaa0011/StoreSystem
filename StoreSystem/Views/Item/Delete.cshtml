@model StoreSystem.Dtos.Item.ReadItemDto

<div class="container mt-5">
    <h1 class="mb-4 text-center">Delete Item</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 400px;">
        <div class="card-body text-center">
            <img src="@Url.Content($"~/{@Model.ImagePath.Replace("\\", "/")}")" alt="Item Image" class="img-fluid" style="max-height: 150px; object-fit: cover;" />

            <h4 class="card-title">@Model.Name</h4>
            <p class="text-muted">Are you sure you want to delete this item?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
