@using StoreSystem.Dtos.Item
@model ReadItemDto

<h1>Item Details</h1>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4 text-center">
            <img src="@Url.Content(Model.ImagePath != null ? $"~/{Model.ImagePath.Replace("\\", "/")}" : "~/images/defaultImage.png")"
                 alt="Item Image"
                 class="img-fluid rounded-start"
                 style="max-height: 300px; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    <strong>Description:</strong> @Model.Description
                </p>
                <p class="card-text">
                    <strong>Price:</strong> $@Model.Price
                </p>
                <div class="mt-3">
                    <a asp-action="Update" asp-controller="Item" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-controller="Item" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" asp-controller="Item" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
