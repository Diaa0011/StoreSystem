@model List<Store>

<h1>Store List</h1>

<div style="text-align: right; margin-bottom: 10px;">
    <a asp-controller="Store" asp-action="Create"  class="btn btn-success">Add Store</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Store Id</th>
            <th>Store Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            <tr>
                <td>@store.Id</td>
                <td>@store.Name</td>
                <td>@store.Address</td>
                <td class="text-center align-middle" style="white-space: nowrap;">
                    <div class="d-flex">

                        <a class="btn btn-info btn-sm flex-fill mx-1" href="@Url.Action("Details", new { id = store.Id })">Details</a>

                        <a class="btn btn-warning btn-sm flex-fill mx-1" href="@Url.Action("Edit", new { id = store.Id })">Edit</a>

                        <a class="btn btn-danger btn-sm flex-fill mx-1" href="@Url.Action("Delete", new { id = store.Id })">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
